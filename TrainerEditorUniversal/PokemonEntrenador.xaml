<UserControl x:Class="TrainerEditorUniversal.PokemonEntrenador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainerEditorUniversal"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid MouseLeftButtonUp="Grid_MouseLeftButtonUp">
        <Grid.RowDefinitions>
            <RowDefinition Height="251*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Image x:Name="imgPokemon"/>
        <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            <Viewbox>
                <TextBlock x:Name="txtNombre" HorizontalAlignment="Center"/>
            </Viewbox>
            <Image x:Name="imgObjeto" Grid.Column="1"/>
        </Grid>
    </Grid>
</UserControl>
